# Actual credentials
ACTUAL_SERVER_URL=https://actual.example.com
ACTUAL_PASSWORD=super-secret
ACTUAL_SYNC_ID=
# BACKUP_SYNC_ID=BudgetId:SyncId,AnotherBudget:AnotherSync
ACTUAL_BUDGET_ENCRYPTION_PASSWORD=

# Google Sheets
ENABLE_SHEETS=true
SHEETS_MODE=service-account
SHEETS_SERVICE_ACCOUNT_JSON=/app/credentials/service-account.json
SHEETS_OAUTH_CLIENT_ID=
SHEETS_OAUTH_CLIENT_SECRET=
SHEETS_DEFAULT_SPREADSHEET_ID=
SHEETS_CONFIG_PATH=/app/config/sheets.yml

# Scheduler / events
SHEETS_CRON=0 3 * * *
ENABLE_EVENT_STREAM=false
ACTUAL_EVENTS_URL=ws://actual-events:4200
ACTUAL_EVENTS_TOKEN=
EVENT_DEBOUNCE_MS=5000

# Storage paths
BUDGET_DIR=/app/data/budget
TOKEN_STORE_PATH=/app/data/tokens

# HTTP status UI
HTTP_PORT=4020
# PUBLIC_URL must be reachable by the OAuth callback when SHEETS_MODE=oauth
PUBLIC_URL=http://localhost:4020

# Logging
LOG_LEVEL=info
